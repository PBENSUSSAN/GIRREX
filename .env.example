# ============================================================================
# GIRREX - Variables d'environnement (PRODUCTION)
# ============================================================================
# Ce fichier est un EXEMPLE. Créer un fichier .env avec vos vraies valeurs.
# IMPORTANT : Le fichier .env ne doit JAMAIS être commité dans Git !
# ============================================================================

# ====================
# DJANGO CORE
# ====================

# Clé secrète Django (générer avec : python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production

# Mode debug (False en production !)
DEBUG=False

# Hôtes autorisés (séparés par des virgules)
ALLOWED_HOSTS=girrex.example.com,www.girrex.example.com,10.0.0.1

# ====================
# BASE DE DONNÉES
# ====================

# PostgreSQL (recommandé pour la production)
DATABASE_URL=postgresql://username:password@localhost:5432/girrex_db

# Ou avec des variables séparées :
DB_ENGINE=django.db.backends.postgresql
DB_NAME=girrex_db
DB_USER=girrex_user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# ====================
# CELERY (Task Queue)
# ====================

# Redis broker
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ====================
# FICHIERS STATIQUES
# ====================

# URL de base pour les fichiers statiques
STATIC_URL=/static/
STATIC_ROOT=/var/www/girrex/static/

# URL de base pour les fichiers media
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/girrex/media/

# ====================
# STOCKAGE CLOUD (Optionnel)
# ====================

# AWS S3 (si utilisé)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=girrex-media
# AWS_S3_REGION_NAME=eu-west-3

# ====================
# EMAIL
# ====================

# Configuration SMTP
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@girrex.example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=GIRREX <noreply@girrex.example.com>

# ====================
# SÉCURITÉ
# ====================

# HTTPS
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# HSTS (HTTP Strict Transport Security)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ====================
# MONITORING (Optionnel)
# ====================

# Sentry (monitoring d'erreurs)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ====================
# TIMEZONE & LOCALE
# ====================

TIME_ZONE=Europe/Paris
LANGUAGE_CODE=fr-fr

# ====================
# NOTES
# ====================
# 1. Copier ce fichier en .env : cp .env.example .env
# 2. Modifier les valeurs avec vos vraies configurations
# 3. Ne JAMAIS commiter le fichier .env dans Git
# 4. Ajouter .env au .gitignore (déjà fait ✅)
